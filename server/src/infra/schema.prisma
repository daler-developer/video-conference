datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now()) @map("created_at")
  fullName   String

  @@map("users")
}

model Message {
  id         Int      @id @default(autoincrement())
  text       String
  likesCount Int      @map("likes_count")
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("messages")
}

model Conference {
  id        String   @id
  name      String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("conferences")
}
